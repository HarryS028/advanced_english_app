WindowManager:
    MainWindow:
    PlayWindow:
    SearchWindow:
    PreferenceWindow:

<MenuButton@Button>:

<HomeCard@MDCard>:
    MDCard:
        orientation: "vertical"
        padding: "8dp"
        size_hint: None, None
        size: "280dp", "180dp"
        pos_hint: {"center_x": .5, "center_y": .5}

        MDLabel:
            text: "Word of the day"
            theme_text_color: "Secondary"
            size_hint_y: None
            height: self.texture_size[1]

        MDSeparator:
            height: "1dp"

        MDLabel:
            text: "Qgegrgeic: Extremely idealistic; unrealistic and impractical."  
    
<MenuGrid@GridLayout>:
    cols: 4
    row_force_default: True
    row_default_height: 30
    MenuButton:
        text: "Home"
        on_release:
            app.root.current = "Main"
    MenuButton:
        text: "Play"
        on_release:
            app.root.current = "Play"    
    MenuButton:
        text: "Search"
        on_release:
            app.root.current = "Search" 
    MenuButton:
        text: "Preferences"
        on_release:
            app.root.current = "Preference"
            
